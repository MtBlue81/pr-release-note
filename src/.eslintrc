parserOptions:
  ecmaVersion: 6
  sourceType: 'module'
  ecmaFeatures:
    jsx: true
    modules: true
rules:
  comma-dangle:
    - 'error'
    - 'always-multiline'
  indent:
    - 'error'
    - 2
  quotes:
    - 'error'
    - single
  linebreak-style:
    - 'error'
    - unix
  semi:
    - 'error'
    - always
  block-scoped-var: 'error'
  default-case: 'error'
  eqeqeq: 'error'
  no-multi-spaces:
    - 'error'
    - exceptions:
        Property: true
        VariableDeclarator: true
        ImportDeclaration: true
  no-console: 'warn'
  no-warning-comments:
    - 'warn'
    -
      terms:
        - 'todo'
        - 'fixme'
      location: 'start'
  space-before-blocks: 'error'
  arrow-parens:
    - 'error'
    - 'always'
  arrow-spacing:
    - 'error'
    - before: true
      after: true
  constructor-super: 'error'
  no-var: 'error'
  array-bracket-spacing:
    - 'error'
    - 'never'
  block-spacing:
    - 'error'
    - 'always'
  brace-style:
    - 'error'
env:
  es6: true
  node: true
  browser: true
  mocha: true
  commonjs: true
extends:
  - 'eslint:recommended'
  - 'plugin:react/recommended'
ecmaFeatures:
  jsx: true
  experimentalObjectRestSpread: true
plugins:
  - react
